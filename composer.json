{
  "name": "corwatts/fasterscale",
  "description": "An online version of the Faster Scale -- a relapse awareness tool",
  "license": "MIT",
  "minimum-stability": "dev",
  "require": {
    "php": ">=7.0",
    "yiisoft/yii2": ">=2.0.6",
    "yiisoft/yii2-bootstrap": "~2.0.0",
    "yiisoft/yii2-swiftmailer": "~2.0.0",
    "yiisoft/yii2-jui": "*",
    "yiisoft/yii2-redis": "^2.0",
    "bower-asset/jquery": "@stable",
    "bower-asset/bootstrap-sass": "@stable",
    "bower-asset/jquery-ui": "@stable",
    "bower-asset/jquery.inputmask": "@stable",
    "bower-asset/punycode": "@stable",
    "moment/moment": "dev-master",
    "spacedealer/yii2-loggly": ">=0.2.0",
    "bower-asset/chartjs": "^2.1",
    "amenadiel/jpgraph": "^3.6"
  },
  "require-dev": {
    "yiisoft/yii2-debug": "~2.0.0",
    "yiisoft/yii2-gii": "~2.0.0",
    "yiisoft/yii2-faker": "~2.0.0",

    "codeception/base": "^2.2.3",
    "codeception/specify": "*",
    "codeception/verify": "*"
  },
  "scripts": {
    "post-create-project-cmd": [
      "yii\\composer\\Installer::setPermission"
    ]
  },
  "config": {
    "process-timeout": 1800
  },
  "extra": {
    "writable": [
      "console/runtime",
      "console/migrations",
      "site/runtime",
      "site/assets",
      "site/web/assets",
      "site/web/css",
      "site/web/js"
    ],
    "executable": [
      "yii"
    ],
    "asset-installer-paths": {
      "npm-asset-library": "vendor/npm",
      "bower-asset-library": "vendor/bower"
    }
  }
}
